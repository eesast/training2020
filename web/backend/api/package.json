{
  "name": "sast-api",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "dev:debug": "nodemon --debug",
    "test": "mocha --require @babel/register test/**/*.ts --exit",
    "test:debug": "yarn test --inspect-brk",
    "build": "babel src -d build -x \".ts\" --source-maps",
    "serve": "cross-env NODE_ENV=production node build/index.js",
    "lint": "eslint --ext .js,.ts src/ test/",
    "typecheck": "tsc --noUnusedLocals"
  },
  "dependencies": {
    "@babel/runtime": "7.9.2",
    "bcrypt": "5.0.0",
    "cors": "2.8.5",
    "cwebp-bin": "5.1.0",
    "debug": "4.1.1",
    "dockerode": "3.2.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-openapi-validator": "3.12.1",
    "html-to-text": "5.1.1",
    "is-image": "3.0.0",
    "jsonwebtoken": "8.5.1",
    "lodash.pick": "4.4.0",
    "mongoose": "5.9.9",
    "morgan": "1.10.0",
    "multer": "1.4.2",
    "nodemailer": "6.4.6",
    "utf8": "3.0.0",
    "uuid": "7.0.3"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/node": "7.8.7",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.8.3",
    "@babel/plugin-proposal-numeric-separator": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.9.5",
    "@babel/plugin-proposal-optional-chaining": "7.9.0",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-typescript": "7.9.0",
    "@babel/register": "7.9.0",
    "@types/bcrypt": "3.0.0",
    "@types/chai": "4.2.11",
    "@types/cors": "2.8.6",
    "@types/debug": "4.1.5",
    "@types/dockerode": "2.5.27",
    "@types/express": "4.17.6",
    "@types/html-to-text": "5.1.0",
    "@types/jsonwebtoken": "8.3.9",
    "@types/lodash.pick": "4.4.6",
    "@types/mocha": "7.0.2",
    "@types/mongoose": "5.7.12",
    "@types/morgan": "1.9.0",
    "@types/multer": "1.4.3",
    "@types/nodemailer": "6.4.0",
    "@types/supertest": "2.0.8",
    "@types/utf8": "2.1.6",
    "@types/uuid": "7.0.3",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "chai": "4.2.0",
    "cross-env": "7.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "husky": "4.2.5",
    "lint-staged": "10.1.5",
    "mocha": "7.1.1",
    "nodemon": "2.0.3",
    "prettier": "2.0.4",
    "supertest": "4.0.2",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint && yarn typecheck"
    }
  },
  "lint-staged": {
    "{{src/**/*,test/**/*}.{js,jsx,ts,tsx,json,css,scss,md},docs/swagger.yaml}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "env": {
      "DEBUG": "sast-api"
    },
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "babel-node --extensions \".ts\" --config-file \"./.babelrc\" src/index.ts"
  }
}
